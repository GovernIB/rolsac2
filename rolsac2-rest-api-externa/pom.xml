            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.logging</groupId>
            <artifactId>commons-logging-jboss-logging</artifactId>
            <scope>test</scope>
        </dependency>
        <!-- Per tests amb Arquillian -->
        <dependency>
            <groupId>org.jboss.arquillian.junit</groupId>
            <artifactId>arquillian-junit-container</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>es.caib.rolsac2</groupId>
            <artifactId>rolsac2-ejb</artifactId>
            <type>ejb</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>es.caib.rolsac2</groupId>
            <artifactId>rolsac2-persistence</artifactId>
            <scope>test</scope>
        </dependency>

        <!--         Swagger -->
        <!-- 		<dependency> -->
        <!-- 			<groupId>io.springfox</groupId> -->
